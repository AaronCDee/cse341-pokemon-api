{
  "swagger": "2.0",
  "info": {
    "title": "Pokemon API",
    "description": "Manage pokemon database",
    "version": "1.0.0"
  },
  "host": "aaroncdee-cse341-pokemon-api.onrender.com",
  "basePath": "/pokemon",
  "schemes": [
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Endpoint to list all pokemon.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Register a new Pokemon to the Pokedex",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "Pokemon data",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Pikachu"
                },
                "type": {
                  "type": "string",
                  "example": "Electric"
                },
                "weakness": {
                  "type": "string",
                  "example": "Ground"
                },
                "caughtAt": {
                  "type": "string",
                  "example": "2025-05-21T10:00:00.000Z"
                }
              },
              "required": [
                "name",
                "type",
                "weakness",
                "caughtAt"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "description": "Endpoint to fetch a pokemon by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "description": "Update a Pokemon in the Pokedex",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the Pokemon",
            "example": "60c72b2f5f1b2c001f5a1e9d"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Pokemon data",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Pikachu"
                },
                "type": {
                  "type": "string",
                  "example": "Electric"
                },
                "weakness": {
                  "type": "string",
                  "example": "Ground"
                },
                "caughtAt": {
                  "type": "string",
                  "example": "2025-05-21T10:00:00.000Z"
                }
              },
              "required": [
                "name",
                "type",
                "weakness",
                "caughtAt"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "delete": {
        "description": "Endpoint to delete a pokemon.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}